{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lit",
  "scopeName": "source.lit",
  "patterns": [
    { "include": "#template" },
    { "include": "#script" },
    { "include": "#style" }
  ],
  "repository": {
    "template": {
      "patterns": [
        {
          "begin": "<template\\b[^>]*>",
          "end": "</template>",
          "contentName": "meta.embedded.html.lit",
          "patterns": [{ "include": "text.html.basic" }]
        }
      ]
    },
    "script": {
      "patterns": [
        {
          "begin": "<script\\b[^>]*>",
          "end": "</script>",
          "patterns": [{ "include": "source.js" }]
        }
      ]
    },
    "style": {
      "patterns": [
        {
          "begin": "<style\\b[^>]*>",
          "end": "</style>",
          "patterns": [{ "include": "source.css" }]
        }
      ]
    }
  }
}
